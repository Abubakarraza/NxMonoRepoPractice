{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@raza/footer": ["libs/footer/src/index.js"],
      "@raza/header": ["libs/header/src/index.ts"],
      "@raza/home-page": ["libs/home-page/src/index.js"],
      "@raza/pages": ["libs/pages/src/index.js"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
